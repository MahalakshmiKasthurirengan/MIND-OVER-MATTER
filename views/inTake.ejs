<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Autism Support Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background: linear-gradient(245.59deg, rgb(20, 20, 132) 0%, rgb(65, 65, 205) 28.53%, rgb(38, 38, 147) 75.52%);
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            overflow: hidden;
            text-align: center;
        }

        h1 {
            font-size: 3rem;
            margin-bottom: 30px;
            color: #ffeb3b;
            animation: fadeIn 1.5s ease;
        }

        .type-buttons {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 40px;
        }

        button {
            padding: 15px 30px;
            font-size: 18px;
            font-weight: bold;
            border-radius: 50px;
            border: none;
            cursor: pointer;
            background-color: #ff6f61;
            color: white;
            transition: transform 0.3s ease, background-color 0.3s ease;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }

        button:hover {
            background-color: #ff3f2e;
            transform: translateY(-5px);
        }

        .content {
            max-width: 800px;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            animation: fadeInUp 1s ease;
        }

        .content .icon {
            font-size: 50px;
            margin-bottom: 20px;
        }

        .content h2 {
            font-size: 2rem;
            margin-bottom: 10px;
        }

        @keyframes fadeIn {
            0% {
                opacity: 0;
            }
            100% {
                opacity: 1;
            }
        }

        @keyframes fadeInUp {
            0% {
                transform: translateY(30px);
                opacity: 0;
            }
            100% {
                transform: translateY(0);
                opacity: 1;
            }
        }
    </style>
</head>
<body>

<h1>Support for Autism Children</h1>

<div class="type-buttons">
    <button onclick="showDetails('kanners')">Kanner's Syndrome</button>
    <button onclick="showDetails('aspergers')">Asperger's Syndrome</button>
    <button onclick="showDetails('cdd')">Childhood Disintegrative Disorder</button>
    <button onclick="showDetails('rett')">Rett Syndrome</button>
    <button onclick="showDetails('pdd')">PDD-NOS</button>
</div>

<div id="details" class="content">
    <h2>Select a Syndrome to See Details</h2>
</div>

<script>
    const data = {
    kanners: {
        day1: {
            food: "Soft foods, high in nutrients (smoothies, mashed potatoes), cooked vegetables, and lean protein like baked fish",
            activities: "Structured play, Visual schedules, and sensory bins with safe textures",
            special: "Minimize changes in routine, Use visual aids, and incorporate calming environments"
        },
        day2: {
            food: "Protein-rich foods (chicken, lentils), Fruits, and omega-3-rich options like salmon or chia seeds",
            activities: "Sensory-friendly activities, Listening to calming music, and simple outdoor walks",
            special: "Provide familiar objects, Avoid overstimulation, Ensure gentle transitions between activities"
        }
    },
    aspergers: {
        day1: {
            food: "Balanced diet, whole grains, leafy vegetables, and yogurt with probiotics",
            activities: "Group interaction with focus on communication and team-building games",
            special: "Encourage social activities, Avoid sensory overload, and introduce slow-paced conversations"
        },
        day2: {
            food: "High-protein snacks (boiled eggs, nuts), yogurt, fruits, and fiber-rich meals like oatmeal",
            activities: "Puzzle-solving, Art and craft sessions, and solo play with building blocks",
            special: "Emphasize structured routines, Focus on independence, and use visual progress charts"
        }
    },
    cdd: {
        day1: {
            food: "Nutrient-dense soft meals (vegetable soup, rice), pureed fruits, and dairy-free options for sensitivities",
            activities: "Sensory therapy, Gentle interactive games, and listening to soft nature sounds",
            special: "Focus on regression signs, Provide emotional support, and maintain a predictable schedule"
        },
        day2: {
            food: "Balanced diet with high fiber (whole grains, fruits), lightly spiced stews, and mashed avocado",
            activities: "Simple storytelling, Hands-on activities, and sensory-friendly toys",
            special: "Engage with calm activities, Promote self-expression, and limit disruptive stimuli"
        }
    },
    rett: {
        day1: {
            food: "Soft-textured foods, Easy to swallow (soups, mashed vegetables), and protein shakes",
            activities: "Movement-based therapy, Music therapy, and light stretching exercises",
            special: "Monitor for seizures, Gentle communication, and provide emotional security"
        },
        day2: {
            food: "Nutritious snacks, Pureed fruits and vegetables, and vitamin-enriched smoothies",
            activities: "Calming sensory input, Gentle massage therapy, and rhythmic clapping exercises",
            special: "Provide comforting environments, Use assistive devices, and encourage small motor-skill tasks"
        }
    },
    pdd: {
        day1: {
            food: "Protein-rich meals, Simple carbohydrates, omega-3 rich nuts, and dairy substitutes",
            activities: "Structured learning activities, Sensory play, and guided play sessions",
            special: "Focus on building social skills, Use repetitive learning tools, and emphasize small rewards"
        },
        day2: {
            food: "Smoothies, Vegetable-based snacks, whole-grain sandwiches, and gluten-free crackers",
            activities: "Simple group activities, Interactive storytelling, and water-based play",
            special: "Structured routines, Visual aids for learning, and encourage independent attempts"
        }
    }
};


    function showDetails(type) {
        const day = (new Date().getDate() % 2 === 0) ? 'day1' : 'day2';
        const typeData = data[type][day];

        document.getElementById('details').innerHTML = `
            <div class="icon"><i class="fas fa-utensils"></i></div>
            <h2>Details for ${type.charAt(0).toUpperCase() + type.slice(1)}</h2>
            <p><strong>Food:</strong> ${typeData.food}</p>
            <div class="icon"><i class="fas fa-child"></i></div>
            <p><strong>Activities:</strong> ${typeData.activities}</p>
            <div class="icon"><i class="fas fa-star"></i></div>
            <p><strong>Special:</strong> ${typeData.special}</p>
        `;
    }
</script>

</body>
</html>
